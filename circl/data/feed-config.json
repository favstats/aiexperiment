{
  "version": "1.0",
  "description": "Circl Feed Configuration - Edit this file to customize feed behavior",
  
  "feed_settings": {
    "total_posts": 40,
    "stimuli_count": 4,
    "filler_ratio": 4,
    "randomize_order": true,
    "first_n_fillers": 2,
    "show_ai_labels": false
  },
  
  "personalization": {
    "enabled": true,
    "mode": "tailored_plus_random",
    "tailored_count": 1,
    "random_count": 3,
    "matching": [
      {"url_param": "gender", "post_path": "author.gender"},
      {"url_param": "age", "post_path": "author.age_group"},
      {"url_param": "politics", "post_path": "metadata.ideology", "transform": "political_to_ideology"},
      {"url_param": "issue", "post_path": "metadata.policy_issue"}
    ],
    "transforms": {
      "political_to_ideology": {
        "type": "range",
        "ranges": [
          {"min": 1, "max": 4, "value": "left"},
          {"min": 5, "max": 5, "value": "neutral"},
          {"min": 6, "max": 10, "value": "right"}
        ]
      }
    }
  },
  
  "stimuli_source": "stimuli.json",
  "fillers_source": "fillers.json",
  
  "defaults": {
    "time_range": {"min": 1, "max": 23, "unit": "h"},
    "likes_range": {"min": 50, "max": 500},
    "comments_range": {"min": 5, "max": 80},
    "shares_range": {"min": 10, "max": 200}
  },
  
  "avatar_settings": {
    "api_url": "https://randomuser.me/api/portraits",
    "age_ranges": {
      "18-29": {"min": 1, "max": 30},
      "30-44": {"min": 15, "max": 50},
      "45-59": {"min": 35, "max": 70},
      "60+": {"min": 50, "max": 99}
    },
    "fallback_colors": ["#1877F2", "#42B72A", "#F5A623", "#FA383E", "#00A3A3", "#7B68EE", "#FF6B6B"]
  },
  
